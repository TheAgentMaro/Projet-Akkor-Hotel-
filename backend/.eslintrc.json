{
  "env": {
    "node": true,
    "jest": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-console": ["warn", { "allow": ["info", "error"] }],
    "no-unused-vars": "warn",
    "prefer-const": "error",
    "no-var": "error"
  }
}
